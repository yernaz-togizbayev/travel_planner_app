<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF0F7"
    tools:context=".SearchTravelActivity">

    <EditText
        android:id="@+id/editTextText7"
        android:layout_width="223dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="City"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="211dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextText7"
        app:layout_constraintStart_toStartOf="@+id/editTextText7"
        app:layout_constraintTop_toBottomOf="@+id/editTextText7" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="89dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="To:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="306dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Return"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="One-Way"
            android:textAlignment="textStart"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="358dp"
        android:layout_height="68dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Enter Travel Information"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/black"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="89dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="From:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="222dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="City"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/textView11" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="211dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/editTextText5" />

    <EditText
        android:id="@+id/departureDateText"
        android:layout_width="226dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Departure Date"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/departureDateButton"
        app:layout_constraintTop_toTopOf="@+id/departureDateButton" />

    <EditText
        android:id="@+id/returnDateText"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Return Date"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/returnDateButton"
        app:layout_constraintTop_toTopOf="@+id/returnDateButton" />

    <ImageButton
        android:id="@+id/returnDateButton"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:contentDescription="returnDateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departureDateButton"
        app:srcCompat="@drawable/calender_icon" />

    <ImageButton
        android:id="@+id/departureDateButton"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:layout_marginStart="52dp"
        android:contentDescription="departureDateButton"
        android:onClick="onDepartureDateButtonPress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner3"
        app:srcCompat="@drawable/calender_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>